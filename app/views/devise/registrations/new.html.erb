<div class="sessions_page">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :username, placeholder: " enter a username", class: "top-raduis"%>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: " enter email" %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: "enter password" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password_confirmation, placeholder: "confirm password" %>
  </div>

  <div class="field">
    <%= f.text_field :photo, placeholder: " enter photo"%>
  </div>

  <div class="field">
    <%= f.text_field :cover_image, placeholder: " enter a cover_image", class: "down-radius"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<p class="alternate-action"> 
<span> Aready have an account? </span> 
<%= render "devise/shared/links" %> 
</p>
</div>