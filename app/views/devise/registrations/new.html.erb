<div class="sessions_page">
<h2>Sign up</h2>

<%= form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.text_field :fullname, placeholder: " enter fullname", class: "top-raduis"%>
  </div>

  <div class="field">
    <%= f.text_field :username, placeholder: " enter a username"%>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: " enter email" %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: "enter password" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password_confirmation, placeholder: "confirm password" %>
  </div>

  <div class="field">
    <p>
      <span>Add a profile pixture </span> <br/>  
      <%= f.file_field :photo %> 
    </p>
  </div>
  
  <div class="field">
   <p>
    <span> Add a cover image </span> <br/> 
    <%= f.file_field :cover_image %>
   </p> 
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<p class="alternate-action"> 
<span> Aready have an account? </span> 
<%= render "devise/shared/links" %> 
</p>
</div>